<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>globalpom-parent</artifactId>
		<groupId>com.anrisoftware.globalpom</groupId>
		<version>1.30</version>
	</parent>

	<artifactId>globalpom-log</artifactId>
	<version>1.12-SNAPSHOT</version>
	<name>Logging</name>
	<description>Logger factory to inject a logger for a class.</description>
	<url>https://www.anr-institute.com/projects/projects/globalpom-log</url>
	<inceptionYear>2011</inceptionYear>

	<issueManagement>
		<system>Redmine</system>
		<url>https://www.anr-institute.com/projects/projects/globalpom-log</url>
	</issueManagement>

	<scm>
		<connection>scm:git:${custom.gitpublic.url}globalpom-log.git</connection>
		<developerConnection>scm:git:${custom.gitpublic.url}globalpom-log.git</developerConnection>
		<url>https://www.anr-institute.com/gitpublic/globalpom-log.git/</url>
	</scm>

	<distributionManagement>
		<repository>
			<id>${custom.repository.anrispublic.id}</id>
			<url>${custom.repository.root}${custom.repository.anrispublic.path}</url>
		</repository>
		<snapshotRepository>
			<id>${custom.repository.anrispublicsnapshots.id}</id>
			<url>${custom.repository.root}${custom.repository.anrispublicsnapshots.path}</url>
		</snapshotRepository>
	</distributionManagement>

	<dependencies>

		<!-- test dependencies -->
		<dependency>
			<groupId>com.google.inject.extensions</groupId>
			<artifactId>guice-assistedinject</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.anrisoftware.globalpom</groupId>
			<artifactId>globalpom-groovytestutils</artifactId>
			<version>1.16</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>logback.properties</include>
				</includes>
			</resource>
		</resources>
	</build>

</project>
